# Desactiva el listado de directorios
Options -Indexes
Options +FollowSymLinks

# Define index.php como el archivo predeterminado para el directorio principal
DirectoryIndex index.php

# Activa el motor de reescritura para permitir las reglas personalizadas de URL
RewriteEngine On

# Redirige las solicitudes que vienen de www.mykebab.com/api/ a Api/Api.php
RewriteCond %{HTTP_HOST} ^www\.mykebab\.com$ [NC]
RewriteRule ^aplicacion/(.+) /Api/Api.php?var=$1 [L]

# Redirige las solicitudes que vienen de www.mykebab.com/personalizar/ a Api/ApiPersonalizar.php
RewriteCond %{HTTP_HOST} ^www\.mykebab\.com$ [NC]
RewriteRule ^personalizar/(.+) /Api/ApiPersonalizar.php?var=$1 [L]

# Redirige las solicitudes que vienen de www.mykebab.com/logearse/ a Api/ApiLogin.php
RewriteCond %{HTTP_HOST} ^www\.mykebab\.com$ [NC]
RewriteRule ^logearse /Api/ApiLogin.php [L]

# Redirige las solicitudes que vienen de www.mykebab.com/logearse/ a Api/ApiLogin.php
RewriteCond %{HTTP_HOST} ^www\.mykebab\.com$ [NC]
RewriteRule ^direccion/(.+) /Api/ApiDireccion.php?var=$1 [L]

# Redirige las solicitudes que vienen de www.mykebab.com/logearse/ a Api/ApiLogin.php
RewriteCond %{HTTP_HOST} ^www\.mykebab\.com$ [NC]
RewriteRule ^usuario /Api/ApiUsuario.php [L]


# Redirige todas las dem√°s solicitudes a index.php
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ /index.php?var=$1 [L]



